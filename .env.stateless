# Stateless deployment configuration (no database required)
# Copy this to .env for deployments without database

# Required API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# Model Configuration
DEFAULT_MODEL=gemini-2.5-flash
EVALUATOR_MODEL=gemini-2.5-flash

# Application Settings
LOG_LEVEL=INFO
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
MAX_SYNTHETIC_CASES=10
REQUEST_TIMEOUT=30

# Disable Database (for free/stateless deployments)
ENABLE_DATABASE=false

# Disable authentication for stateless mode
JWT_SECRET_KEY=not-needed-in-stateless-mode
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# No encryption needed in stateless mode
ENCRYPTION_KEY=not-needed-in-stateless-mode